{
    "compilerOptions": {
        "target": "ES2020",
        "module": "nodenext",
        "declaration": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "strict": true,
        "esModuleInterop": true,
        "paths": {
            "@/*": ["./src/*"]
        },
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
